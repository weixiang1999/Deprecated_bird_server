const Controller = require('egg').Controller;
/*

*/
class C extends Controller {
  // POST
  async create() {
    const ctx = this.ctx;
    const id = await ctx.model.Role.create(ctx.request.body.data);
    ctx.body = {
      status: 1,
      data: id,
    };
  }
  async show() {
    const ctx = this.ctx;
    const data = await ctx.model.Role.findAll({ where: ctx.queries });
    ctx.body = {
      status: 1,
      data,
    };
  }
  // PUT
  async update() {
    const ctx = this.ctx;
    const data = await ctx.model.Role.update(ctx.request.body.data.newInfo, { where: ctx.request.body.data.filter });
    ctx.body = {
      status: 1,
      data,
    };
  }
  async destroy() {
    // const ctx = this.ctx;
    // const data = await ctx.model.Role.
  }

}

module.exports = C;
